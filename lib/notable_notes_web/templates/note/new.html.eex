<div class="content">
  <h2>Create a new note</h2>

  <%= form_for @changeset, Routes.note_path(@conn, :create), fn f -> %>
    <label>
      Title: <%= text_input f, :title %>
    </label>

    <label>
      <span id="body-label">Body:</span> <%= textarea f, :body %>
    </label>

    <label>
      Color: <%= select f, :color, ["red", "orange", "yellow", "green", "blue", "purple"] %>
    </label>

    <%= submit "Submit" %>
  <% end %>
</div>
